<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>.:: PaperTrail.io - @ViewData["Title"] ::.</title>
        <!-- IonIcons -->
        <link rel="stylesheet" href="http://code.ionicframework.com/1.3.3/css/ionic.min.css" />
        <!-- FontAwesome-Free -->
        <script src="https://kit.fontawesome.com/b0993e6c8e.js" crossorigin="anonymous"></script>
        <!-- Theme css -->
        <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css" />
    </head>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="Catalog" asp-action="Index" class="nav-link">Catalog</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="Patron" asp-action="Index" class="nav-link">Patrons</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="Branches" asp-action="Index" class="nav-link">Branches
                        </a>
                    </li>
                </ul>
                <!-- /.navbar-nav -->
            </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a asp-controller="Home" asp-action="Index" class="brand-link">
                    <!-- <img
                        src="dist/img/AdminLTELogo.png"
                        alt="AdminLTE Logo"
                        class="brand-image img-circle elevation-3"
                        style="opacity: .8"
                    /> -->
                    <span class="brand-text font-weight-light">PaperTrail.io</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul
                            class="nav nav-pills nav-sidebar flex-column"
                            data-widget="treeview"
                            role="menu"
                            data-accordion="false"
                        >
                            <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                            <li class="nav-item has-treeview menu-open active">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Dashboard
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Catalog" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Catalog
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Patron" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Patrons
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Branches" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Branches
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <div class="content-wrapper">
                @RenderBody()
            </div>

            <footer class="main-footer border-top footer bg-dark text-muted">
                <div class="container">
                    &copy; 2020 - PaperTrail.io -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
        <!-- /.wrapper -->

        <script src="~/theme/plugins/jquery/jquery.min.js"></script>
        <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/theme/dist/js/adminlte.js"></script>
        <script src="~/theme/plugins/datatables/jquery.dataTables.js"></script>
        <script src="~/theme/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
        <script src="~/theme/dist/js/customscripts.js"></script>
    </body>
</html>
