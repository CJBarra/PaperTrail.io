@model PaperTrail.Web.Models.Branch.BranchDetailModel
@{
    ViewData["Title"] = "Branches | " + @Model.Name;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="text-muted">Branch Information</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Branch" asp-action="Index">Branches</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <!-- Main Row -->
    <div class="row">
        <!-- Branch Card -->
        <div class="col-md-4">
            <div class="card card-primary card-outline">
                <!-- Card-body -->
                <div class="card-body">
                    <div class="text-center">
                        <img class="img-thumbnail" src="@Model.ImageUrl" alt="user img">
                    </div>
                    <h4 class="profile-username text-center">@Model.Name</h4>
                    
                    <ul class="list-group list-group-unbordered mb-2">
                        <li class="list-group-item">
                            <b>Address:</b> 
                            <a class="float-right text-muted">@Model.Address</a>
                        </li>
                        <li class="list-group-item">
                            <b>Phone:</b> 
                            <a class="float-right text-muted">@Model.Telephone</a>
                        </li>
                        <li class="list-group-item">
                            <b>Status:</b> 
                            @if(@Model.IsOpen == false){
                                <a class="float-right text-danger">Closed</a>
                            }else{
                                <a class="float-right text-success">Open</a>
                            }
                        </li>
                        <li class="list-group-item">
                            <b>Open Hours:</b>
                            <ul class="list-group list-group-unbordered">
                                @foreach (var day in @Model.HoursOpen){
                                    <li class="list-group-item">
                                        <a class="float-right text-muted">@day</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- ./ Card-body End -->
            </div>
        </div> 
        <!-- ./Branch Card End -->

        <div class="col-md-8">
            <!-- Branch Synopsis -->
            <div class="row">
                <div class="col-md-12">
                    <!-- Card -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h5 class="card-title">Branch Synopsis</h5>
                        </div>

                        <div class="card-body">
                            <ul class="list-group list-group-unbordered mb-2">
                                <li class="list-group-item">
                                    <b>About:</b>
                                    <a class="text-muted">@Model.Description</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Patrons Registered:</b>
                                    <a class="float-right text-muted">@Model.NumberOfPatrons</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Assets InHouse:</b>
                                    <a class="float-right text-muted">@Model.NumberOfAssets</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Est. Total Asset Value:</b>
                                    <a class="float-right text-muted">@Model.TotalAssetValue.ToString("C")</a>
                                </li>
                            </ul>
                        </div>
                    </div>  
                    <!-- ./Card End-->
                </div> 
            </div>
            <!-- ./Branch Synopsis End-->
        </div> 
        <!-- col 8 end -->

    </div>
    <!-- ./ Main Row End-->
</section>