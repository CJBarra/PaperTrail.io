@model PaperTrail.Web.Models.CheckoutModels.CheckoutModel
@{ViewData["Title"] = "Catalog | Checkout"; }


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="text-muted">Checkout - @Model.Title</h3>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="row">                   
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <img class="img-thumbnail" src="@Model.ImageUrl" />
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("PlaceCheckout", "Catalog", FormMethod.Post)){
                        @Html.HiddenFor(a => a.ItemId)
                        <table class="table table-responsive-sm table-sm">
                            <tr>
                                <th>Title:</th>
                                <td class="text-right">@Model.Title</td>
                            </tr>
                            <tr>
                                <th>Ref. id:</th>
                                <td class="text-right">@Model.ItemId</td>
                            </tr>
                            <tr>
                                <th>
                                    Enter Patron Card ID:
                                </th>
                                <td class="float-right">
                                    @Html.TextBoxFor(a => a.PatronCardId)
                                </td>
                            </tr>
                        </table>
                        <div class="text-center">
                            <button type="submit" class="btn btn-sm btn-block btn-outline-success">
                                Checkout Item
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
              
    </div>
</section>
    